<!doctype html>
<html>
  <head>
  <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport'>
  <meta charset="UTF-8">
  <title>{{ site.title }} | {{ page.title }}</title>
  <link rel="stylesheet" href="{{ '/css/normalize.css' | baseurl | relative }}">
  <link rel="stylesheet" href="{{ '/css/style.css' | baseurl | relative }}">
  <link rel="stylesheet" href="{{ '/css/grayscale.css' | baseurl | relative }}">
  </head>
  <body id="top">

    <nav>
      <img class="nav__logo" src="/img/logo.svg" alt="">
      {% block navlink %}
        {% include 'partials/homelink.njk' %}
        {% include 'partials/backlink.njk' %}
        <a class="nav__link nav__link--edit" href="http://prose.io/#binarylink/dev/edit/master/{{ page.types | join("/") }}/index.md">Изменить</a>
      {% endblock %}
      <a class="nav__link" href="http://0bwave.site">0bWave</a>
    </nav>

    <header>
      {% block header %}
        <h1 class="header__title">{{ page.title }}</h1>
        <span class="header__desc">{{ page.desc }}</span>
      {% endblock %}
    </header>

    <aside>
      <dl class="side__list">
        {% block sidelist %}
          {% include 'partials/sidelist.njk' %}
        {% endblock %}
      </dl>
    </aside>

    <main>
      {% block content %}
        {{ content | safe }}
      {% endblock %}
    </main>

    <footer class="bar">
      <a rel="license" href="http://creativecommons.org/licenses/by-nc-sa/4.0/"><img alt="Лицензия Creative Commons" style="border-width:0" src="https://i.creativecommons.org/l/by-nc-sa/4.0/80x15.png" /></a>
      <a href="#top">^^^</a>
    </footer>

    <script src="/js/script.js"></script>

  </body>
</html>
